<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneWeek" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OneWeek.NoActionBar" parent="Theme.OneWeek">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/design_default_color_primary</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">@dimen/appbar_margin</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21dp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="TextAppearance.AppCompat.MainInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/content_margin_16</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">#6e6e6e</item>
    </style>

    <style name="ItemTextSmall" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_item_small</item>
        <item name="android:textColor">@android:color/secondary_text_material_light</item>
    </style>

    <style name="ItemTextMedium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_item_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>